#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
# export DH_VERBOSE=1

%:
	dh  $@ --with python2

# This runs the following:
# dh clean
#   dh_testdir, dh_auto_clean, `python setup.py clean -a`, dh_clean
# dh build
#   dh_testdir, dh_auto_configure, dh_auto_build, `python setup.py build`,
#   dh_auto_test
# dh binary
#   dh_testroot, dh_prep, dh_installdirs, dh_auto_install,
#   `python setup.py install --force --root=debian/tmp --no-compile -O0 --install-layout=deb`
#   dh_install, dh_installdocs, dh_installchangelogs, dh_installexamples,
#   dh_installman, dh_installcatalogs, dh_installcron, dh_installdebconf,
#   dh_installemacsen, dh_installifupdown, dh_installinfo, dh_pysupport,
#   dh_installinit, dh_installmenu, dh_installmime, dh_installmodules,
#   dh_installlogcheck, dh_installlogrotate, dh_installpam, dh_installppp,
#   dh_installudev, dh_installwm, dh_installxfonts, dh_bugfiles, dh_lintian,
#   dh_gconf, dh_icons, dh_perl, dh_usrlocal, dh_link, dh_compress, dh_fixperms,

# Here there's a missing (?) DH_PYCENTRAL=include-links dh_pycentral -i

#   dh_strip, dh_makeshlibs, dh_shlibdeps, dh_installdeb, dh_gencontrol,
#   dh_md5sums, dh_builddeb
# dh clean
#   dh_testdir, dh_auto_clean, `python setup.py clean -a`, dh_clean

# override_dh_compress:
#   TODO: maybe specify that files in examples/* shouldn't be compressed?
